      z-index: 9999;
      animation: float-away 2s ease-out forwards;
    `;
    document.body.appendChild(emoji);

    setTimeout(() => emoji.remove(), 2000);

    // Special message after 10 clicks
    if (clickCount === 10) {
      alert('üêß Du hast den geheimen Pinguin-Modus freigeschaltet! üéâ');
      document.body.classList.add('penguin-party');
      setTimeout(() => {
        document.body.classList.remove('penguin-party');
      }, 5000);
    }
  });

  // 2. Konami Code Easter Egg
  const konamiCode = ['ArrowUp', 'ArrowUp', 'ArrowDown', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'ArrowLeft', 'ArrowRight', 'b', 'a'];
  let konamiIndex = 0;

  document.addEventListener('keydown', (e) => {
    if (e.key === konamiCode[konamiIndex]) {
      konamiIndex++;
      if (konamiIndex === konamiCode.length) {
        activateKonamiMode();
        konamiIndex = 0;
      }
    } else {
      konamiIndex = 0;
    }
  });

  function activateKonamiMode() {
    // Create penguin rain!
    const penguinRain = document.createElement('div');
    penguinRain.id = 'penguin-rain';
    penguinRain.style.cssText = `
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      pointer-events: none;
      z-index: 9999;
    `;
    document.body.appendChild(penguinRain);

    for (let i = 0; i < 50; i++) {
      setTimeout(() => {
        const penguin = document.createElement('div');
        penguin.textContent = 'üêß';
        penguin.style.cssText = `
